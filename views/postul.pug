extends layout

block content
  div(id='main')
    div(class='inner')

      header(id='header')
        h1= title       

      section(id='banner')
        div(class='content')
          header
            p= 'Détails de(s) demande(s) : ' 


              table
                tr
                  td Figurant
                  td Evénement concerné
                  td Statut de la demande
                each postul, i in postullist
                  tr
                    td
                      = postul.idFigu.name + " " +postul.idFigu.firstname 
                    td
                      = postul 
                    td
                      = postul.etat                        